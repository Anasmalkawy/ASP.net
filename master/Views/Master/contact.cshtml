<main>
    <!-- tart heading -->
    <div class="heading">
        <div class="heading-home">
            <i class='bx bx-home'></i>
            <span>
                / تواصل معنا
            </span>
        </div>
        <div class="heading-home">
            <span>
                تواصل معنا
            </span>
        </div>
    </div>
    <!-- end heading -->
    <!-- start contact-section -->
    <div class="contact-section">
        <div class="contact-box">
            <!-- box 1 -->
            <div class="box">
                <div class="icon">
                    <i class='bx bxl-gmail'></i>
                </div>
                <span class="box-title">راسلنا بالبريد الإلكتروني</span>
                <div class="contact-info">
                    <div class="icon-contant">
                        <i class='bx bxl-gmail'></i>
                        <p class="info-contant">mhmod@gmail.com</p>
                    </div>

                </div>
            </div>
            <!-- box 1 -->
            <div class="box">
                <div class="icon">
                    <i class='bx bxs-phone-call'></i>
                </div>
                <span class="box-title">اتصل بنا </span>
                <div class="contact-info">
                    <div class="icon-contant">
                        <i class='bx bxs-phone-call'></i>
                        <p>+ 970 546 6345 </p>
                    </div>

                </div>
            </div>
            <!-- box 1 -->
            <div class="box">
                <div class="icon">
                    <i class='bx bxs-map-pin'></i>
                </div>
                <span class="box-title">زيارة مكتبنا</span>
                <div class="contact-info">
                    <div class="icon-contant">
                        <i class='bx bxs-map-pin'></i>
                        <p class="info-contant">123 شارع صلاح الدين رفح</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end contact-section -->
    <!-- start contact-Send -->
    <div class="contact-Send">
        <div class="container-send">
            <!-- form -->
            <form action="#" class="contact-form">
                <h2 class="form-title">أرسل رسالتك</h2>
                <input class="full-name-input" type="text" placeholder="الاسم كامل">
                <div class="contact-details">
                    <input class="mobile-input" type="tel" placeholder="الهاتف المحمول">
                    <input class="email-input" type="email" placeholder="البريد الإلكتروني">
                </div>
                <textarea class="message-input" name="message" id="" cols="30" rows="10" placeholder="نص الرسالة"></textarea>
                <button class="send-button"><a href="#">ارسال رسالتك</a></button>
            </form>

            <!-- iframe -->
            <iframe title="فلسطين"
                    width="600"
                    height="397"
                    id="gmap_canvas"
                    src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed"
                    scrolling="no">
            </iframe>
        </div>
    </div>
    <!-- end contact-Send -->
</main>